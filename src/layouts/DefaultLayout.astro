---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SiteMeta from "../components/SiteMeta.astro";
import "../styles/global.css";

const {
  title = "PJECZ Justicia Digital",
  description = "Plataformas de información del Poder Judicial del Estado de Coahuila de Zaragoza.",
  url,
  image = "/generic.jpg",
  author = "PJECZ Dirección de Informática",
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <SiteMeta
      title={title}
      description={description.substring(0, 100)}
      url={Astro.site}
      image={image}
      author={author}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
    />
  </head>
  <body>
    <Header />
    <main class="bg-white text-gray-200 dark:bg-gray-800 dark:text-gray-300 pt-8 pb-16 px-0">
      <slot />
    </main>
    <Footer />
  </body>
</html>
