---
import { Image } from "astro:assets";
const { icon, title, url } = Astro.props;
---

<a
  href={url}
  class="flex flex-col items-center justify-center p-6 rounded-lg border shadow-md bg-gray-100 dark:bg-gray-900 hover:bg-gray-200 hover:dark:bg-gray-800 transition-colors duration-200"
>
  <Image src={icon} alt={title} width="120" height="90" />
  <h3 class="text-base font-semibold mt-2">{title}</h3>
</a>
